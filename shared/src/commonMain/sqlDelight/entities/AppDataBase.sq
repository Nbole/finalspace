CREATE TABLE Character (
    id INTEGER NOT NULL PRIMARY KEY,
    name TEXT,
    status TEXT,
    species TEXT,
    gender TEXT,
    hair TEXT,
    alias TEXT,
    imgUrl TEXT
);

CREATE TABLE Episode (
    id INTEGER NOT NULL PRIMARY KEY,
    name TEXT,
    airDate TEXT,
    director TEXT,
    writer TEXT,
    imgUrl TEXT
);

loadCharacterById: SELECT * FROM Character WHERE id = :id;

loadAllCharacters: SELECT * FROM Character;

loadAllEpisodes: SELECT * FROM Episode;

deleteAllCharacters: DELETE FROM Character;

deleteAllEpisodes: DELETE FROM Episode;

saveCharacters: INSERT OR REPLACE INTO Character VALUES (?,?,?,?,?,?,?,?);

saveEpisotes: INSERT OR REPLACE INTO Episode VALUES (?,?,?,?,?,?);

